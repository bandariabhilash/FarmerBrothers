<script>
    $(document).ready(function () {
        $("#uploadBtn").on("click", function () {
            $(".modal").show();
        })

        const allowedKeys = [
            'Backspace', 'ArrowLeft', 'ArrowRight', 'ArrowUp', 'ArrowDown',
            'Delete', 'Tab', 'Home', 'End'
        ];

        // Prevent invalid keys while typing
        $('#workorderTxt').on('keydown', function (e) {
            if (
                (e.key >= '0' && e.key <= '9') ||
                e.key === ',' ||
                allowedKeys.includes(e.key)
            ) {
                // allow input
            } else {
                e.preventDefault();
            }
        });

        // Clean up pasted or inserted input
        $('#workorderTxt').on('input', function () {
            $(this).val(function (_, val) {
                return val.replace(/[^0-9,]/g, '');
            });
        });

        $("#btnCloseEvent").on("click", function (e) {
            var workorderIds = $('#workorderTxt').val();
            var isChecked = $("#isCSEchk").is(":checked") ? true : false;

            if (!workorderIds) {
                AlertPopup("Please Enter comma separated WorkOrder Ids");
                e.preventDefault();
            }
            else {
                $.ajax({
                    type: 'POST',
                    url: "@Url.Action("CloseEventsNSR", "Workorder")",
                    data: { "workOrderIdStr": workorderIds, "isCSE": isChecked }
                }).done(function (response) {
                    if (response != null && response.success == true) {
                        var obj = $("#ClosedEventsResults").ejGrid("instance");
                        obj.dataSource(response.data);
                    }
                    else {
                        AlertPopup('|There is a problem Closing Events! Please contact support!');
                    }
                });
            }

            e.preventDefault();
        });
    });

    function WOListClear() {
        $('#workorderTxt').val(" ");
        $('#isCSEchk').attr('checked', false);
    }
</script>

