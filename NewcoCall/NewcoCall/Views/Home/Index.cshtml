            $("#serviceQuoteBtn").hide();
            $("#cardDetailsSec").hide();
            $("#IdSubmit").show();


            //New Changes
            $(".serviceQuoteField").addClass("required");
            var totalAmnt = $("#totSerTxt").html();
            if (!totalAmnt) {
                $("#IdSubmit").hide();
                $("#serviceQuoteBtn").show();
                $("#cardDetailsSec").hide();
            }
            else {
                $("#IdSubmit").show();
                $("#serviceQuoteBtn").hide();
                $("#cardDetailsSec").show();
            }
        }
        else {
            $("#IdSubmit").text("Pay & Submit");

            $(".newcoAccNumSec").hide();

            $(".serviceQuoteField").addClass("required");

            var totalAmnt = $("#totSerTxt").html();
            if (!totalAmnt) {
                $("#IdSubmit").hide();
                $("#serviceQuoteBtn").show();
                $("#cardDetailsSec").hide();
            }
            else {
                $("#IdSubmit").show();
                $("#serviceQuoteBtn").hide();
                $("#cardDetailsSec").show();
            }

        }
    }

