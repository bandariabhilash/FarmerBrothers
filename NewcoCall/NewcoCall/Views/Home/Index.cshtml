            //    & PaymentTransactionId=1SKG2AGSR1PTT
            //    & PaymentTerm=Credit + Card
            //    & AccountNumber=1137892
            //    & CustomerName=Amazon
            //    & Address1=1234E+Imperial + Hwy
            //    & Address2=c % 2Fo + Nordstrom + Order + Pickup +% 23123
            //    & City=Los + Angeles
            //    & State=CA
            //    & PostalCode=90012
