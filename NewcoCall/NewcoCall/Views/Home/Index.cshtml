        $("#serviceQuoteBtn").on("click", function () {

            var state = $('#stateTxt').val();
            var postalcode = $('#zipcodeTxt').val();
            var ServiceType = $('#serviceTyp').val();
            var isValid = true;

            if (state == "-1") {
                $("#stateErrorMsg").html("State required");
                isValid = false;
            }
            if (postalcode == "") {
                $("#postalCodeErrorMsg").html("Zip Code required");
                isValid = false;
            }
            if (ServiceType == "0") {
                $("#serviceTypeErrorMsg").html("Service Type required");
                isValid = false;
            }

            if (!isValid) return false;

            SetSubmitOperation(2);
            //$(".modal").show();
            $.ajax({
                type: "Get",
                url: "@Url.Action("GetServiceQuote", "Workorder")",
                data: { ZipCode: $("#zipcodeTxt").val(), State: $("#stateTxt").val(), ServiceType: ServiceType },
                //async: false
            }).done(function (response) {
                if (response.success) {
                    $(".formField").removeClass("required");
                    $(".serviceQuoteField").removeClass("required");

                    if (response.flag == 1) {
                        $(".quoteField").show();

                        var data = response.data;
                        $("#trvlDstTxt").val(data.TravelDistance);
                        $("#trvlTimeTxt").val(data.TravelTime);
                        $("#laborTimeTxt").val(data.LaborHours);
                        $("#trvlTxt").val("$" +data.TravelAmount);
                        $("#lbrTxt").val("$" + data.Labor);
                        $("#totSerTxt").text(" " + data.TotalServiceQuote);
                    }
                    else {
                        AlertPopup(response.message);
                    }
                    //$(".modal").hide();
                    SetSubmitOperation(0);

                    var totalAmnt = $("#totSerTxt").html();
                    if (!totalAmnt) {
                        $("#IdSubmit").hide();
                        $("#serviceQuoteBtn").show();

                        $(".formField").removeClass("required");
                        $(".serviceQuoteField").addClass("required");
                    }
                    else {
                        $("#IdSubmit").show();
                        $("#serviceQuoteBtn").hide();

                        $(".formField").addClass("required");
                    }
                }
                else {
                    //$(".modal").hide();
                }
            });
        })

